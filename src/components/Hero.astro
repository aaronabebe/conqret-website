<style lang="scss">
    @import "../styles/constants";

    .hero-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 70vh;
        flex-direction: column;

        @include for-desktop-up {
            flex-direction: row;
            margin: 5em 0 3em 0;
        }
    }

    .hero-row {
        padding: 5px;
        @include for-desktop-up {
            margin-left: 80px;
        }
    }

    .logo-main {
        font-family: "Bebas Neue";
        font-size: 3em;
        margin-top: 1.5em;
        margin-left: -1em;
        position: absolute;
        text-shadow: 5px 5px $black;

        @include for-desktop-up {
            font-size: 7.5em;
            margin-top: 1.5em;
            margin-left: 0;
        }
    }

    .logo-bg {
        font-family: "DM Serif Display";
        font-size: 5em;
        color: rgba($color: $primary, $alpha: 1);
        text-shadow: -1px -1px 0 $tertiary, 0 -1px 0 $tertiary,
            1px -1px 0 $tertiary, 1px 0 0 $tertiary, 1px 1px 0 $tertiary,
            0 1px 0 $tertiary, -1px 1px 0 $tertiary, -1px 0 0 $tertiary;

        @include for-desktop-up {
            font-size: 14em;

        }
    }

    .italic {
        font-style: italic;
    }

    .catchphrase-main {
        color: $white;
        font-size: 2em;
        line-height: 1.2;

        @include for-desktop-up {
            font-size: 3em;
        }
    }

    .catchphrase-secondary {
        font-family: "DM Serif Display";
        font-style: italic;
        text-shadow: 5px 5px $black;
        font-size: 2em;

        @include for-desktop-up {
            font-size: 4em;
        }
    }
</style>
